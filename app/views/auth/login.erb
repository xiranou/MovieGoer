<form class="form-horizontal" id="login-form" action="/login" method="post">
  <fieldset>
  <legend>Log In</legend>

    <div class="form-group">
      <label for="inputUsername" class="col-lg-2 control-label">Username</label><br>
      <div class="col-md-5">
        <input type="text" class="form-control" id="inputUsername" placeholder="username" name="username">
      </div>
    </div>

    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label><br>
      <div class="col-md-5">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
      </div>
    </div>


    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button class="btn btn-default cancel-btn">Cancel</button>
        <button type="submit" class="btn btn-primary">Log In!</button>
      </div>
    </div>
  </fieldset>
</form>