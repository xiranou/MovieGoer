<form class="form-horizontal" id="new-reply" action="/comment/<%= parent.id %>/reply" method='post'>
  <fieldset>
    <legend>Reply</legend>
    <div class="form-group">
      <label for="textArea" class="col-lg-2 control-label">Content</label>
      <div class="col-lg-10">
        <textarea class="form-control" rows="3" id="textArea" name="reply[content]" placeholder="Write Your Comment Here!"></textarea>
      </div>
    </div>
    <input type="hidden" name="reply[review_id]" value="<%= parent.review.id %>">
     <input type="hidden" name="reply[parent_id]" value="<%= parent.id %>">
    <input type="hidden" name="reply[commenter_id]" value="<%= current_user.id %>">
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>